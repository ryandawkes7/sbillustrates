<div id="contact" class="section_container w-100 d-flex">

  {{! Desktop }}
  <div class="d-none d-md-flex w-100 px-100">
    {{! Social Links }}
    <div class="col-6 d-flex justify-content-center">
      <div
        class="col-12 d-flex flex-column justify-content-center align-items-center h-100 py-5 px-100 contact_box"
      >
        {{! Logo }}
        <div class="logo_image d-flex my-3">
          <img src="/img/logo.png" alt="" />
        </div>
        {{! Social Links }}
        <ul class="d-flex pl-0 my-2 social_container">
          <li class="col-4 d-flex justify-content-center social_item">
            <a href="#" class="p-2">
              <img src="/img/facebook.png" alt="" />
            </a>
          </li>
          <li class="col-4 d-flex justify-content-center social_item">
            <a href="#" class="p-2">
              <img src="/img/twitter.png" alt="" />
            </a>
          </li>
          <li class="col-4 d-flex justify-content-center social_item">
            <a href="#" class="p-2">
              <img src="/img/instagram.png" alt="" />
            </a>
          </li>
        </ul>
        {{! Etsy }}
        <div class="d-flex flex-column align-items-center my-3 etsy_container">
          <p class="mb-1 font-size-10">
            <em>
              Prints available from...
            </em>
          </p>
          <a href="#" class="etsy_link px-3 py-2">
            Etsy Store
          </a>
        </div>
        {{! Email }}
        <div class="d-flex align-items-center mt-2 mb-3 email_container">
          <img src="/img/mail.png" alt="" />
          <a class="ml-2" href="#">
            <p class="mb-0">
              sarahbrennanillustrates@gmail.com
            </p>
          </a>
        </div>
      </div>
    </div>
    {{! Contact Form }}
    <div class="col-6 d-flex justify-content-center">
      <div
        class="col-12 mx-0 d-flex flex-column justify-content-center align-items-center h-100 py-5 px-50 contact_box"
      >
        {{! Title }}
        <div class="contact_title">
          <h1 class="ml-auto">
            Contact Me
          </h1>
          <p>
            Get in touch for commissions and general enquiries.
          </p>
        </div>
        {{! Form }}
        <form action="" class="w-100">
          <div class="form-group d-flex flex-column">
            <label class="mb-1" for="">
              Name
            </label>
            <input
              type="text"
              class="p-2"
              placeholder="Your full name..."
              required
            />
          </div>
          <div class="form-group d-flex flex-column">
            <label class="mb-1" for="">
              Email
            </label>
            <input
              type="text"
              class="p-2"
              placeholder="Your email address..."
              required
            />
          </div>
          <div class="form-group d-flex flex-column">
            <label class="mb-1" for="">
              Message
            </label>
            <textarea
              type="text"
              class="p-2"
              placeholder="Your message (e.g. what are your commission rates?)..."
              required
            ></textarea>
          </div>
          <input
            type="submit"
            value="Send"
            class="submit_btn d-flex ml-auto px-4 py-2"
          />
        </form>
      </div>
    </div>
  </div>

  {{! Mobile }}
  <div class="d-flex flex-column d-md-none w-100 col-12 mobile_contact my-3">
    {{!-- Title --}}
    <div class="title p-2">
        <h1>Contact Me</h1>
        <p>Follow my pages to get updates on my work and to get in touch</p>
    </div>

    {{!-- Social Links --}}
    <ul class="social_links d-flex pl-0">
        <li class="col-4 p-2">
            <div class="social_item p-2">
                <img class="w-100" src="/img/instagram.png" alt="">
            </div>
        </li>
        <li class="col-4 p-2">
            <div class="social_item p-2">
                <img class="w-100" src="/img/facebook.png" alt="">
            </div>
        </li>
        <li class="col-4 p-2">
            <div class="social_item p-2">
                <img class="w-100" src="/img/twitter.png" alt="">
            </div>
        </li>
    </ul>

    {{!-- Etsy & Email --}}
    <div class="col-12 p-2 d-flex etsy_email_container">
        <div class="col-6 etsy_email_box p-0 pr-2">
            <div class="d-flex py-3 px-2 flex-column justify-content-center align-items-center etsy_email_inner">
                <p class="mb-2">Purchase my prints here</p>
                <a href="#" class="d-flex px-4 justify-content-center align-items-center etsy_button">ETSY</a>
            </div>
        </div>
        <div class="col-6 etsy_email_box p-0 pl-2">
            <div class="d-flex py-3 px-2 flex-column justify-content-center align-items-center etsy_email_inner">
                <p class="mb-2">Email your requests here</p>
                <a href=""><img class="h-100" src="/img/mail.png" alt=""></a>
            </div>
        </div>
    </div>

    {{!-- Form --}}
    <form class="mobile_form mx-2 mt-3 p-3" action="">
        <h2 class="py-3">Send a Message</h2>
        <div class="my-3 form-group d-flex flex-column">
            <label class="mb-1" for="">Name</label>
            <input class="p-2" type="text" placeholder="Your name..."/>
        </div>
        <div class="form-group d-flex flex-column">
            <label class="mb-1" for="">Email</label>
            <input class="p-2" type="text" placeholder="Your email..."/>
        </div>
        <div class="form-group d-flex flex-column">
            <label class="mb-1" for="">Name</label>
            <textarea class="p-2" type="text" placeholder="Your message..."></textarea>
        </div>
        <input class="mt-3 d-flex ml-auto submit_btn px-4 py-2" type="submit" value="Send">
    </form>


  </div>
</div>